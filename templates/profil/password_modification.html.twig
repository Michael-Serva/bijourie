{% extends "base.html.twig" %}

{% block title %}{{ parent() }} | Modification de votre mot de passe{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/profil.css") }}">
{% endblock %}

{% block h1 %}Modification de votre mot de passe{% endblock %}

{% block body %}


    <div class="row justify-content-end">
        <a class='btn btn-info p-2 col-md-3' href="{{ path('profil') }}">Retour</a>
    </div>


    <div class="col-md-4 mx-auto">

        {{ form_start(formPassword) }}

            {{ form_row(formPassword.oldPassword) }}

            {{ form_row(formPassword.newPassword) }}

            {{ form_row(formPassword.confirmPassword) }}


            <input type="submit" class="btn btn-primary col-md-12 mt-3" value="Modifier"> 

        {{ form_end(formPassword) }}

    </div>




{% endblock %}

